{% extends 'layout.html.twig' %}

{% block title %}Index{% endblock %}

{% block content %}
    <div class="container main-page">
        <div class="dropdown ">
            <button class="btn btn-blue dropdown-toggle" type="button" id="dropdownMenuButton"
                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Choisir un service
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" href="/Service/index/0">Tous les services</a>
                {% for service in services %}
                <a class="dropdown-item" href="/Service/index/{{ service.id }}">{{ service.label }}</a>
                {% endfor %}
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            {% for user in users %}
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card h-100">
                    <a href="#"><img class="card-img-top" src="/assets/images/users/{{ user.idPicture }}.jpg" alt=""></a>
                    <div class="card-body">
                        <h4 class="card-title">
                            <a href="/Profil/index/{{ user.id }}">{{ user.firstname }}</a>
                        </h4>
                        <h5>{{ user.label }}</h5>
                        <p class="card-text">{{ user.description }}</p>
                    </div>
                    <div class="card-footer">
                        <small class="text-muted">
                            {% include 'Inc/rate.html.twig' %}
                        </small>
                    </div>
                </div>
            </div>
            {% endfor %}

        </div>
    </div>


{% endblock %}
