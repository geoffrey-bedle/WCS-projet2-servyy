{% extends 'layoutAdmin.html.twig' %}

{% block content %}

    <div class="card mb-3">
        <div class="card-header">
            Liste des services
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                    <tr>
                        <th>id</th>
                        <th>Service</th>
                        <th>Lien Image</th>
                        <th>Modifier</th>
                        <th>supprimer</th>
                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                        <th>id</th>
                        <th>Service</th>
                        <th>Lien Image</th>
                        <th>Modifier</th>
                        <th>supprimer</th>
                    </tr>
                    </tfoot>
                    <tbody>
                    {% for service in services %}
                    <tr>
                        <td>{{ service.id }}</td>
                        <td>{{ service.label }}
                        <td>{{ service.picture }}</td>
                        <td><a class="btn" href="/Admin/modifyServices/{{ service.id }}" type="submit">✏️</a> </td>
                        <td><a class="btn" href="/Admin/deleteService/{{ service.id }}" type="submit">❌</a></td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-header">
            Ajouter un service
        </div>
        <div class="card-body">
            <form method="post" action="" class="form-inline" enctype="multipart/form-data">
                <div class="form-group mx-sm-3 mb-2">
                    <label for="service" class="sr-only">Service</label>
                    <input type="text" name="label" class="form-control" id="service" placeholder="Service">
                </div>
                <div class="form-group mx-sm-3 mb-2">
                    <input type="hidden" name="MAX_FILE_SIZE" value="1048576"/>
                    <input type="hidden" name="sendFile" value="1"/>
                    <label for="picture" class="sr-only">Image</label>
                    <input type="file" name="picture[]" class="" id="picture">
                </div>
                <button type="submit" name="addService" value="addService" class="btn btn-primary mb-2">Ajouter</button>
            </form>
        </div>
    </div>

{% endblock %}